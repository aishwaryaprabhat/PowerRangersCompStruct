module hangman_display (
    input clk,  // clock
    input rst,  // reset
    input wrong[3],
    output outsel1[8],
    output outsel2[8],
    output outpic1[8][8],
    output outpic2[8][8],
    output ct[3]
  ) {
  
  .clk(clk), .rst(rst) {
    counter ctr (#DIV(16), #SIZE(3), #TOP(7));
  }
  
  hangdecoder decode;
  
  always {
      case(wrong){    
      1:outpic1={
             8b11111111,
             8b11111101,
             8b11111101,
             8b11111101,
             8b11111101,
             8b11111101,
             8b11111101,
             8b00000001};
        outpic2={
             8b11111111,
             8b11111111,
             8b11111111,
             8b11111111,
             8b11111111,
             8b11111111,
             8b11111111,
             8b00000000};
          
      2:outpic1={             
             8b11111111,
             8b10011101,
             8b01101101,
             8b01100001,
             8b01101101,
             8b10011101,
             8b11111101,
             8b00000001};
        outpic2={
             8b11111111,
             8b11111111,
             8b11111111,
             8b11111111,
             8b11111111,
             8b11111111,
             8b11111111,
             8b00000000}; 

      3:outpic1={             
             8b11111111,
             8b10011101,
             8b01101101,
             8b01100001,
             8b01101101,
             8b10011101,
             8b11111101,
             8b00000001};
        outpic2={
             8b11111111,
             8b11111111,
             8b11111111,
             8b11110000,
             8b11111111,
             8b11111111,
             8b11111111,
             8b00000000}; 
          
      4:outpic1={             
             8b11111111,
             8b10011101,
             8b01101101,
             8b01100001,
             8b01101101,
             8b10011101,
             8b11111101,
             8b00000001};
        outpic2={
             8b11111111,
             8b11111011,
             8b11111101,
             8b11110000,
             8b11111101,
             8b11111011,
             8b11111111,
             8b00000000}; 
          
      5:outpic1={             
             8b11111111,
             8b10011101,
             8b01101101,
             8b01100001,
             8b01101101,
             8b10011101,
             8b11111101,
             8b00000001};
        outpic2={
             8b11111111,
             8b11011011,
             8b11101101,
             8b11110000,
             8b11101101,
             8b11011011,
             8b11111111,
             8b00000000}; 
          
      default:
        outpic1={             
             8b11111111,
             8b11111111,
             8b11111111,
             8b11111111,
             8b11111111,
             8b11111111,
             8b11111111,
             8b11111111};
        outpic2={
             8b11111111,
             8b11111111,
             8b11111111,
             8b11111111,
             8b11111111,
             8b11111111,
             8b11111111,
             8b11111111};   
    }
    
    decode.in = ctr.value;
    outsel1 = decode.out;
    outsel2 = decode.out;
    ct = ctr.value;
  }
}

