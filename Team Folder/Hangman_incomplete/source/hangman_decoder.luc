module hangdecoder (
    input in[4],  
    output out[16]
  ) {

  always {
    case(in){
    0:out=16b0000000000000001;
    1:out=16b0000000000000010;
    2:out=16b0000000000000100;
    3:out=16b0000000000001000;
    4:out=16b0000000000010000;
    5:out=16b0000000000100000;
    6:out=16b0000000001000000;
    7:out=16b0000000010000000;
    8:out=16b0000000100000000;
    9:out=16b0000001000000000;
    10:out=16b0000010000000000;
    11:out=16b0000100000000000;
    12:out=16b0001000000000000;
    13:out=16b0010000000000000;
    14:out=16b0100000000000000;
    15:out=16b1000000000000000;
    default:out=16bxxxxxxxxxxxxxxxx;
    }
  }
}
